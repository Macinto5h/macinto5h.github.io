doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=description)
    meta(name="theme-color", content="#030029")

    title #{title}

    link(rel="apple-touch-icon", sizes="180x180", href="/assets/img/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="192x192", href="/assets/img/favicon/android-chrome-192x192.png")
    link(rel="icon", type="image/png", sizes="512x512", href="/assets/img/favicon/android-chrome-512x512.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/assets/img/favicon/favicon-16x16.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/assets/img/favicon/favicon-32x32.png")
    link(rel="shortcut icon", href="/assets/img/favicon/favicon.ico")
    link(rel="manifest", href="/assets/img/favicon/site.webmanifest.json")

    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Jura&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/assets/styles.css")

    script(type="module", src="/assets/js/safety-slider/safety-slider.esm.js")
    script(nomodule, src="/assets/js/safety-slider/safety-slider.js")

  body.text-dark.bg-light
    nav.navbar.navbar-expand-lg.bg-light
      .container-fluid
        a.navbar-brand(href="/") MAC'S SITE
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/") HOME
            li.nav-item
              a.nav-link(href="/about") ABOUT
            li.nav-item
              a.nav-link(href="/blog") BLOG
            li.nav-item
              a.nav-link(href="/portfolio") PORTFOLIO
    main
      .container.py-5
        block main
    footer.bg-light.py-3
      .container-fluid
        ul.list-unstyled.d-flex.flex-row.justify-content-center
          li.p-3
            a.link-primary(href="https://github.com/Macinto5h", aria-label="My Github page") GitHub
          li.p-3
            a.link-primary(href="https://stackoverflow.com/users/12248104/macintosh", aria-label="My Stack Overflow page") Stack Overflow
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js", integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk", crossorigin="anonymous")
    script(src="/assets/js/bootstrap/bootstrap.min.js")
